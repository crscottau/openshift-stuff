# Safe ports
acl SSL_ports port 443
acl Safe_ports port 80

# Allow OCP disconnected range
${ALLOWED_ACLS}

# Define allowed domain for OpenShift release signatures
# This could be replaced by a file if it gets more complicated
acl allowed_domain dstdomain mirror.openshift.com

# Deny requests to certain unsafe ports
http_access deny !Safe_ports

# Deny CONNECT to other than secure SSL ports
http_access deny CONNECT !SSL_ports

# Only allow cachemgr access from localhost
http_access allow localhost manager
http_access deny manager
http_access allow localhost

# Allow OCP range to access the allowe domain
http_access allow ocpdisc allowed_domain

# And finally deny all other access to this proxy
http_access deny all

# Upstream proxy configuration
#cache_peer ${PROXY_HOST} parent ${PROXY_PORT} 0 no-query default login=${PROXY_USER}:${PROXY_PASSWORD}
cache_peer ${PROXY_HOST} parent ${PROXY_PORT} 0 no-query default
never_direct allow all

# Upstream proxy timeout and retry settings
connect_timeout 30 seconds
forward_timeout 30 seconds
peer_connect_timeout 10 seconds
http_port 3128

# Uncomment and adjust the following to add a disk cache directory.
#cache_dir ufs /var/spool/squid 100 16 256

# Move pidfile
pid_filename /var/run/squid/squid.pid

# Leave coredumps in the first cache dir
coredump_dir /var/spool/squid

# Default refresh_pattern entries.
refresh_pattern ^ftp:		1440	20%	10080
refresh_pattern -i (/cgi-bin/|\?) 0	0%	0
refresh_pattern .		0	20%	4320
